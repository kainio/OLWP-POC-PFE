# Project namespace
CONTAINERS_PREFIX={{ containers_prefix }}

# Gitea Configuration
GITEA_VERSION={{ gitea_version }}
GITEA_RUNNER_VERSION=0.2.12
GITEA_URL={{ gitea_local_url }}

# GITEA Security Configuration
GITEA_SECRET_KEY={{ gitea_secret_key }}
GITEA_INTERNAL_TOKEN={{ gitea_internal_token }}
GITEA_ALLOWED_HOST_LIST="{{ gitea_allowed_host_list }}"

# GITEA User access configuration
GITEA_USER_EMAIL={{ gitea_user_email }}
GITEA_USERNAME={{ gitea_user }}
GITEA_PASSWORD={{ gitea_password }}
GITEA_TOKEN={{ gitea_token }}

# Gitea Repository Configuration
GITEA_REPO_OWNER={{ repo_owner }}
GITEA_REPO_NAME={{ repo_name }}

# Gitea Runner Configuration
GITEA_RUNNER_REGISTRATION_TOKEN={{ gitea_runner_registration_token }}
GITEA_RUNNER_NAME={{ gitea_runner_name }}
GITEA_RUNNER_LABELS={{ gitea_runner_labels }}
RUNNER_JOB_CONTAINER_IMAGE={{ runner_job_container_image }}

# Gitea Webhook Configuration
GITEA_WEBHOOK_SECRET={{ gitea_webhook_secret }}

# Integration Service Configuration
INTEGRATION_SERVICE_URL=http://integration-service:3001
NODE_ENV=development
PORT=3001

# Notifications Configuration
EMAIL_NOTIFICATIONS=false

# Grafana Configuration
GRAFANA_VERSION=12.0.1
GRAFANA_URL=http://grafana:3000

# OpenSearch Configuration
OPENSEARCH_VERSION=2.11.0
OPENSEARCH_URL=http://opensearch:9200
OPENSEARCH_INDEX_CONTACTS=contacts
OPENSEARCH_INDEX_REFERENCE=reference-data

# Moqui Framework Configuration
MOQUI_URL=http://mock-moqui:8080
MOQUI_USERNAME=admin
MOQUI_PASSWORD=admin

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/integration.log

# CDM Configuration
CDM_SCHEMA_VERSION=1.0
CDM_NAMESPACE=com.example.cdm